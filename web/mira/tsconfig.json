{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/views/components/*"],
      "@/layouts/*": ["./src/views/layouts/*"],
      "@/pages/*": ["./src/views/pages/*"],
      "@/routes/*": ["./src/views/routes/*"],

      "@/contexts/*": ["./src/controllers/contexts/*"],
      "@/hooks/*": ["./src/controllers/hooks/*"],
      "@/features/*": ["./src/controllers/features/*"],
      "@/services/*": ["./src/controllers/services/*"],

      "@/types": ["./src/models/types/index.ts"],
      "@/types/*": ["./src/models/types/*"],
      "@/utils/*": ["./src/models/utils/*"],
      "@/lib/*": ["./src/models/lib/*"],

      "@models/*": ["./src/models/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@views/*": ["./src/views/*"],

      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "src/vite-env.d.ts",
    "src/test"
  ]
}
